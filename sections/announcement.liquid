{% if section.settings.text != blank %}
  <div class="full-with bg-primary">
    <div class="flex items-center px-3 justify-center gap-5 mx-auto py-[10px] md:mx-8">
      <p class="text-base font-bold md:block text-white uppercase">
        {% if section.settings.link != blank %}
          <a href="{{ section.settings.link }}">
            {{ section.settings.text }}
          </a>
        {% else %}
          {{ section.settings.text }}
        {% endif %}
      </p>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Barra de anuncios",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "default": "30% Off All Orders Until 4/27",
        "label": "Mensaje"
      }, {
        "type": "url",
        "id": "link",
        "label": "Enlace"
      }
    ]
  }
{% endschema %}